<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"
                style="background-color:#E5E5E5; text-align:center; height:50px; padding:10px 10px 10px 10px;"><i
                    class="fa fa-users" aria-hidden="true" style="margin-right:10px;"></i>DANH SÁCH ĐƠN ĐẶT HÀNG</h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive" style="overflow-y: auto; max-height: 700px;">
                <table class="table table-bordered table-hover sticky-table">
                    <thead class="sticky-header">
                        <tr>
                            <th>STT</th>
                            <th>Tên khách hàng</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Ngày đặt hàng</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                int statusSel = (int)Model[i].Status;
                                <tr>
                                    <td hidden><input class="orderId" disabled hidden="hidden" type="text"
                                            value="@(Model[i].Id.ToString())"></td>
                                    <td hidden><input class="customerId" disabled hidden="hidden" type="text"
                                            value="@(Model[i].CustomerId.ToString())"></td>
                                    <td>@(i)</td>
                                    <td>@Model[i].ShippingFullName</td>
                                    <td>@Model[i].ShippingEmail</td>
                                    <td>@Model[i].ShippingPhone</td>
                                    <td>@Model[i].CreateDate</td>
                                    <td>@string.Format("{0:0,0} VNĐ", Model[i].TotalMoney)</td>
                                    <td>
                                        @{
                                            switch ((int)Model[i].Status)
                                            {
                                                case 0:
                                                    <button type="button" class="btn btn-secondary">Chờ xác nhận</button>
                                                    break;
                                                case 6:
                                                    <button type="button" class="btn btn-warning">Đã xác nhận</button>
                                                    break;
                                                case 1:
                                                    <button type="button" class="btn btn-info">Đang vận chuyển</button>
                                                    break;
                                                case 2:
                                                    <button type="button" class="btn btn-primary">Đang giao hàng</button>
                                                    break;
                                                case 3:
                                                    <button type="button" class="btn btn-success">Đã hoàn thành</button>
                                                    break;
                                                default:
                                                    <button type="button" class="btn btn-danger">Đã hủy</button>
                                                    break;
                                            }
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-info"
                                            onclick="location.href='@Url.Action("Detail", "Order",new { id = Model[i].Id})'" />
                                        <i class="fas fa-pen-square"></i>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
