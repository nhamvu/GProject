        <a class="btn btn-outline-secondary totalStatus" style="margin-left:10px" asp-action="Index"
            asp-route-sortOrder="@ViewData["Confirmed"]" value="@ViewData["totalConfi"]">
            Đang vận chuyển
        </a>
        <a class="btn btn-outline-warning totalStatus" style="margin-left:10px" asp-action="Index"
            asp-route-sortOrder="@ViewData["Delivery"]" value="@ViewData["totalDelivery"]">
            Đang giao hàng
