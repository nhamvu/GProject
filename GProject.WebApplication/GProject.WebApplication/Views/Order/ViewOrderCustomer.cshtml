@using GProject.Data.Enums;
@model GProject.WebApplication.Models.OrderDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Trạng thái hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (@ViewData["Mess"] != null)
{
    <p style="visibility: hidden;" id="error">@ViewData["Mess"]</p>
}
<div class="super_container">
    <div class="col product_section clearfix">
        <div class="row d-none d-lg-block motor-breadscrumb">
            <a class="breadscrumb-parent" href="/product/index">Trang chủ</a>
            <span class="breadscrumb-arrow">❯</span>
            <a class="breadscrumb-parent" href="/Order/ViewOrderCustomer">Trạng thái đơn hàng</a>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-8">
                <a class="btn btn-outline-primary" style="margin-left:10px" asp-action="ViewOrderCustomer" asp-route-sortOrder="@ViewData["InProgress"]">Chờ xác nhận</a>
                <a class="btn btn-outline-secondary" style="margin-left:10px" asp-action="ViewOrderCustomer" asp-route-sortOrder="@ViewData["Confirmed"]">Đang vận chuyển</a>
                <a class="btn btn-outline-warning" style="margin-left:10px" asp-action="ViewOrderCustomer" asp-route-sortOrder="@ViewData["Delivery"]">Đang giao hàng</a>
                <a class="btn btn-outline-success" style="margin-left:10px" asp-action="ViewOrderCustomer" asp-route-sortOrder="@ViewData["Accomplished"]">Hoàn thành</a>
                <a class="btn btn-outline-dark" style="margin-left:10px" asp-action="ViewOrderCustomer" asp-route-sortOrder="@ViewData["Returned"]">Trả hàng</a>
                <a class="btn btn-outline-danger" style="margin-left:10px" asp-action="ViewOrderCustomer" asp-route-sortOrder="@ViewData["Canceled"]">Đã hủy</a>
                <a class="btn btn-outline-info" style="margin-left:10px" asp-action="ViewOrderCustomer"><i class="fas fa-undo-alt"></i></a>
            </div>
        </div>
        <h1 class="text-center" style="margin-top:25px; margin-bottom:25px">Trạng thái đơn hàng</h1>
        @if (Model.OrderList.Count() == 0)
        {
            <h3 class="text-center text-warning">Không có thông tin trạng thái hóa đơn!</h3>
        }
        else
        {
            @foreach (var item in Model.OrderList)
            {
                <div class="container" style="background-color: gray;">
                    <div class="card-body p-4">
                        <div class="card shadow-0 border mb-4">
                            <div class="card-body">
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-8">
                                        <p class="text-success">Thời gian đặt hàng: @item.CreateDate.ToString("dd/MM/yyyy HH:mm")</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p class="text-success">Mã hóa đơn: @item.OrderId</p>
                                    </div>
                                </div>
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-2">
                                        <p class="text-muted mb-0 small">Trạng thái: </p>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            @{
                                                if (item.Status == OrderStatus.InProgress)
                                                {
                                                    <div class="progress-bar" role="progressbar"
                                             style="width: 25%; border-radius: 16px; background-color: #a8729a;"
                                             aria-valuenow="65" aria-valuemin="0" aria-valuemax="100">
                                                    </div>
                                                }
                                                else if (item.Status == OrderStatus.Confirmed)
                                                {
                                                    <div class="progress-bar" role="progressbar"
                                             style="width: 50%; border-radius: 16px; background-color: #a8729a;"
                                             aria-valuenow="65" aria-valuemin="0" aria-valuemax="100">
                                                    </div>
                                                }
                                                else if (item.Status == OrderStatus.Delivery)
                                                {
                                                    <div class="progress-bar" role="progressbar"
                                             style="width: 75%; border-radius: 16px; background-color: #a8729a;"
                                             aria-valuenow="65" aria-valuemin="0" aria-valuemax="100">
                                                    </div>
                                                }
                                                else if (item.Status == OrderStatus.Accomplished)
                                                {
                                                    <div class="progress-bar" role="progressbar"
                                             style="width: 100%; border-radius: 16px; background-color: #a8729a;"
                                             aria-valuenow="65" aria-valuemin="0" aria-valuemax="100">
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Chờ xác nhận</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Đang vận chuyển</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Đang giao hàng</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Hoàn thành</p>
                                        </div>
                                    </div>
                                </div>
                                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">

                                @foreach (var orderDetails in Model.ShowOrderDtoList.Where(x => x.OrderDetail.OrderId == item.Id))
                                {
                                    <div class="row">
                                        <div class="col-md-2">
                                            <img src="~/images/@orderDetails.ProductVariation.Image"
                                     class="img-fluid" alt="">
                                        </div>
                                        <div class="col-md-8">
                                            <p>
                                                @orderDetails.Product.Name
                                            </p>
                                            <p style="color: gray;">
                                                Loại hàng: @orderDetails.Color.Name, @orderDetails.Size.Name
                                            </p>
                                            <p style="color: gray;">
                                                Số lượng: @orderDetails.OrderDetail.Quantity
                                            </p>

                                        </div>
                                        <div class="col-sm-2" style="color: red;">
                                            <p>
                                                @orderDetails.OrderDetail.TotalMoney đ
                                            </p>
                                        </div>
                                    </div>
                                    <hr>
                                }

                                <div class="row d-flex align-items-center" style="margin-bottom: 20px;">
                                    <div class="col-md-8">
                                        <h5>Thông tin giao hàng: </h5>
                                        <div>
                                            <h5>@item.ShippingFullName | @item.ShippingPhone,</h5>
                                        </div>
                                        <div>
                                            <h5>@item.ShippingAddress, @item.ShippingTown, @item.ShippingDistrict, @item.ShippingCity</h5>
                                        </div>

                                    </div>
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-6">
                                                <h4>Trạng thái:</h4>
                                            </div>
                                            <div class="col-6">
                                                @{
                                                    if (item.PaymentType == PaymentType.PayReceive)
                                                    {
                                                        <h4 class="text-primary">Chưa thanh toán</h4>
                                                    }
                                                    else if (item.Status == OrderStatus.Accomplished || item.PaymentType == PaymentType.PayOrder)
                                                    {
                                                        <h4 class="text-primary">Đã thanh toán</h4>
                                                    }
                                                }
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <h5>Phí ship:</h5>
                                            </div>
                                            <div class="col-6">
                                                <h5> @item.ShippingFee đ</h5>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <h5>Giảm giá:</h5>
                                            </div>
                                            <div class="col-6">
                                                <h5> - @item.DiscountRate đ</h5>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <h4>Thành tiền:</h4>
                                            </div>
                                            <div class="col-6">
                                                <h4 style="color: red"> @item.TotalMoney đ</h4>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                @if (item.Status == OrderStatus.Delivery)
                                {
                                    <div class="row d-flex align-items-center">
                                        <div class="col-md-8"></div>
                                        <div class="col-md-4">
                                            <a href="/Order/Index?accomplished=@item.Id" class="btn btn-success col-10">Đã nhận hàng</a>
                                        </div>
                                    </div>
                                }
                                else if (item.Status == OrderStatus.InProgress)
                                {
                                    <div class="row d-flex align-items-center">
                                        <div class="col-md-8"></div>
                                        <div class="col-md-4">
                                            <a du_lieu_id="@item.Id" du_lieu_pay="@((int)item.PaymentType)" style="color: white" class="btn btn-danger col-10 CanceledOrder">Hủy đơn</a>
                                        </div>
                                    </div>
                                }
                                else if (item.Status == OrderStatus.Accomplished)
                                {
                                    <div class="row d-flex align-items-center">
                                        <div class="col-md-8"></div>
                                        <div class="col-md-4">
                                            <button disabled class="btn btn-success col-10">Đã giao hàng thành công</button>
                                        </div>
                                    </div>
                                }
                                else if (item.Status == OrderStatus.Canceled)
                                {
                                    <div class="row d-flex align-items-center">
                                        <div class="col-md-8"></div>
                                        <div class="col-md-4">
                                            <button disabled class="btn btn-danger col-10">Đơn hàng đã bị hủy</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".CanceledOrder").click(function () {
            debugger
            var payType = $(this).attr("du_lieu_pay");
            if (payType == "1"){
                swal("Thông báo", "Đơn hàng không thể hủy do bạn đã thanh toán, bạn cần liên hệ với shop!", "error");
            }
            else
            {
                swal("Bạn có muốn hủy đơn hàng này không?", {
                    title: 'Thông báo',
                    icon: 'info',
                    buttons: ["Không, tôi cần xem lại", "Có, tôi đồng ý"],
                }).then(function (isConfirm) {
                    if (isConfirm) {
                        var _id = $(this).attr("du_lieu_id");
                        $.ajax({
                            url: "/Order/Index?canceled=" + _id,
                            method: 'POST',
                            contentType: 'application/json',
                            success: function () {
                                swal("Thành công", "Đơn hàng đã được hủy!", "success");
                                location.href = "/Order/ViewOrderCustomer"
                            }, error: function (data) {
                                swal("Thông báo", "Đơn hàng không chưa được hủy!", "error");
                            }
                        })
                    } else {
                        swal("Thông báo", "Đơn hàng không chưa được hủy!", "error");
                    }
                });
            }
        });
    });
</script>