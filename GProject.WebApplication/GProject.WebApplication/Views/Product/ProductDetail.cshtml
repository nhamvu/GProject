    function sumTotal() {
        let mQuantity = parseInt($('#quantity').val().replace(/,/g, '') || 0) || 0;
        let mPrice = parseFloat(@price) || 0;
        $('#cQuantity').val(mQuantity);
        $('#cPrice').val(mPrice);
