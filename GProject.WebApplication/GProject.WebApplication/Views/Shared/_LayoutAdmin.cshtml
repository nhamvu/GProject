    <script src="/AdminContent/plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="/AdminContent/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
